@model TeaAndCoffee_Models.ViewModels.OrderVM

<form method="post">
    <input hidden asp-for="OrderHeader.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Inquiry</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Order Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Id</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Id" type="text" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.FullName" type="text" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PhoneNumber" type="text" disabled class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Email" type="text" disabled class="form-control"/>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Status</div>
                                <div class="col-9">
                                    <select asp-for="OrderHeader.OrderStatus" asp-items="@Model.StatusList" class="form-select">
                                        <option disabled selected>Select a status</option>
                                    </select>
                                    <span asp-validation-for="OrderHeader.OrderStatus" class="text-danger"></span>
                                </div>
                            </div>                           

                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Address" type="text" disabled class="form-control"/>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Inquiry Date</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" disabled type="text" class="" />
                                </div>
                            </div>

                           @* <div class="row my-1">
                                <div class="col-3">CreatedBy</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.CreatedBy" type="text" disabled class="form-control"/>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">CreatedById</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.CreatedByUserId" type="text" disabled class="form-control" />
                                </div>
                            </div>*@


                            <div class="row my-1 pt-2">
                                <div class="col-9 offset-3">
                                    <div class="row">
                                        <div class="col">
                                            <input asp-action="UpdateStatus" type="submit" value="Update Status" class="btn btn-warning form-control" />
                                        </div>

                                        <div class="col">
                                            <input type="submit" value="Delete" class="btn btn-danger form-control"
                                                   formaction="/Inquiry/Delete" formmethod="post" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-info">@item.Product.Name</h6>
                                                <small class="text-muted">Price : @item.Product.Price.ToString("c")</small><br />
                                            </div>
                                            <div class="col-4">
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

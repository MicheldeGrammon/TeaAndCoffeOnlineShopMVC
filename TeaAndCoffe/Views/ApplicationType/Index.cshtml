@model IEnumerable<TeaAndCoffe_Models.ApplicationType>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Application Type List</h2>
        </div>
        <div class="col-6 text-xl-end">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%; border:1px solid #222">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="80%">@item.Name</td>                      
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-outline-dark mx-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-outline-danger mx-1">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type exists</p>
    }
</div>



